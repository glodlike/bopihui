<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="退款申请中"
            android:textColor="@color/colorFour"
            android:textSize="@dimen/font_size_m" />
        <include layout="@layout/line_h_1px_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:background="@null"
            android:button="@drawable/open_close_bg_1"
            android:checked="false"
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="53°茅台迎宾酒500ml"
                    android:textColor="@color/colorFour"
                    android:textSize="@dimen/font_size_m" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥998"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorFour"
                    android:textSize="@dimen/font_size_m" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="酒精度：43%vol、 规格：500ml"
                    android:textColor="@color/colorThree"
                    android:textSize="@dimen/font_size_xx" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x10"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorThree"
                    android:textSize="@dimen/font_size_m" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorLine"
        />
    <EditText
        android:id="@+id/content"
        android:textSize="@dimen/font_size_x"
        android:textColor="@color/colorFour"
        android:gravity="left"
        android:paddingLeft= "5dp"
        android:paddingTop = "5dp"
        android:hint="请输入退款理由"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <include layout="@layout/line_h_10dp_view" />
</LinearLayout>